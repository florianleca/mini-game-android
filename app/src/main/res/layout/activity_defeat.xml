<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/defeat_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 250"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/defeat_difficulty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/defeat_highscore_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/defeat_retry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RÃ©essayer"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/defeat_homepage_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page d'accueil"/>
